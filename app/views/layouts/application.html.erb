<!DOCTYPE html>
<script type="text/javascript">
  window.translations = {
    dark_mode: "<%= j t('dark_mode') %>",
    light_mode: "<%= j t('light_mode') %>",
  };
</script>
<html>
  <head>
    <title>My note collection</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <div class="navbar-fixed">
      <nav>
        <div class="nav-wrapper row">
          <div class="col s4">
            <ul class="left btn-language">
              <li>
                <%= link_to "ES", set_language_path('es'), class: 'btn' %>
              </li>
              <li>
                <%= link_to "EN", set_language_path('en'), class: 'btn' %>
              </li>
            </ul>
          </div>
          <div class="col s4">
            <%= link_to notes_path, class: 'brand-logo center' do %>
              <%= t('title') %>
            <% end %>
          </div>
          <div class="col s4">
            <ul class="right btn-theme">
              <li>
                <button id="theme-toggle" class="btn-small theme-toggle"><%= t('dark_mode') %></button>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
